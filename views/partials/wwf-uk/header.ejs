<div id="header-view">
  <div class="header-container">
    <div class="mini-menu">
      <a href="#mainmenu" role="button" data-toggle="collapse"><div class="hamburger"><i class="fa fa-bars" aria-hidden="true"></i></div></a>
      <div class="logo-view">
        <div class="logo"><a href="<%= Defs.BaseHTTPSURL %>/campaign/<%= Campaign.CampaignID %>"><div></div></a></div>
      </div>
      <div class="user-action action-signup"><a class="btn mr-btn btn-primary" href="<%= Defs.BaseHTTPSURL %>/campaign/<%= Campaign.CampaignID %>/register">Sign Up</a></div>
      <div class="user-action action-profile"><span class="active-player-view"></span></div>
    </div>
    <div class="full-menu">
      <div class="bar"></div>
      <div class="menu-container">
        <div class="logo"><a href="<%= Defs.BaseHTTPSURL %>/campaign/<%= Campaign.CampaignID %>"><div></div></a></div>
        <ul class="menus">
          <li><a class="link" href="https://www.wwf.org.uk/wildlife/mountain-gorillas" target="_blank">Discover more about<br/><strong>mountain gorillas</strong></a></li>
          <li><a class="link" href="<%= Defs.BaseHTTPSURL %>/campaign/<%= Campaign.CampaignID %>/about">What is<br/><strong>Climb For Your World</strong></a></li>
          <div class="right">
            <li><a class="link" href="<%= Defs.BaseHTTPSURL %>/campaign/<%= Campaign.CampaignID %>/support">How your<br/><strong>support matters</strong></a></li>
            <li class="user-action action-signup"><a class="btn mr-btn btn-primary" href="<%= Defs.BaseHTTPSURL %>/campaign/<%= Campaign.CampaignID %>/register">Sign Up</a></li>
            <li class="user-action action-profile"><span class="active-player-view"></span></li>
          </div>
        </ul>
      </div>
    </div>
  </div>
</div>

<div class="collapse" id="mainmenu" aria-expanded="false">
  <ul class="menus">
    <li><a class="link" href="https://www.wwf.org.uk/wildlife/mountain-gorillas" target="_blank">Discover more about<br/><strong>mountain gorillas</strong></a></li>
    <li><a class="link" href="<%= Defs.BaseHTTPSURL %>/campaign/<%= Campaign.CampaignID %>/about">What is<br/><strong>Climb For Your World</strong></a></li>
    <li><a class="link" href="<%= Defs.BaseHTTPSURL %>/campaign/<%= Campaign.CampaignID %>/support">How your<br/><strong>support matters</strong></a></li>
  </ul>
</div>

<script type="text/template" id="activePlayerViewTemplate">
  {{ var firstname = player.firstname }}

  {{ if (!firstname) { }}
    {{ firstname = 'unknown' }}
  {{ } }}

  <div class="name"><a class="link" href="<%= Defs.BaseHTTPSURL %>/campaign/<%= Campaign.CampaignID %>/profile"><%= __('menu.greeting') %> {{= firstname }}!</a></div>
</script>
