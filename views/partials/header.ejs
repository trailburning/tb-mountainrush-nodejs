<div id="header-view">
  <div class="header-container">
    <div class="mini-menu">
      <a href="#mainmenu" role="button" data-toggle="collapse"><div class="hamburger"><i class="fa fa-bars" aria-hidden="true"></i></div></a>
      <div class="logo-view">
        <div class="logo"><a href="<%= Defs.BaseHTTPURL %>"><div></div></a></div>
      </div>
      <div class="user-action action-signup"><a href="<%= Defs.BaseHTTPSURL %>/campaign/<%= Campaign.CampaignID %>/register" class="signup btn mr-btn btn-primary">Sign up</a></div>
      <div class="user-action action-profile"><span class="active-player-view"></span></div>
    </div>
    <div class="full-menu">
      <div class="bar"></div>
      <div class="menu-container">
        <div class="logo">
        <a href="<%= Defs.BaseHTTPURL %>"><div></div></a></div>
        <ul class="menus">
          <li><span class="link demo-video"><%= __('Demo Video') %></span></li>
          <li><a class="link" href="<%= Defs.BaseHTTPURL %>/demo"><%= __('Example Game') %></a></li>
          <li><a class="link" href="https://www.instagram.com/explore/tags/playmountainrush/" target="_blank">#playmountainrush</a></li>
          <li class="user-action action-signup"><a href="<%= Defs.BaseHTTPSURL %>/campaign/<%= Campaign.CampaignID %>/register" class="signup btn mr-btn btn-primary"><%= __('Sign up') %></a></li>
          <li class="user-action action-profile"><span class="active-player-view"></span></li>
        </ul>
      </div>
    </div>
  </div>
</div>

<div class="collapse" id="mainmenu" aria-expanded="false">
  <ul class="menus">
    <li><span class="link demo-video"><%= __('Demo Video') %></span></li>
    <li><a href="<%= Defs.BaseHTTPURL %>/demo"><%= __('Example Game') %></a></li>
    <li><a href="https://www.instagram.com/explore/tags/playmountainrush/" target="_blank">#playmountainrush</a></li>
  </ul>
</div>

<script type="text/template" id="activePlayerViewTemplate">
  {{ var firstname = player.firstname }}

  {{ if (!firstname) { }}
    {{ firstname = 'unknown' }}
  {{ } }}

  <div class="name"><a class="link" href="<%= Defs.BaseHTTPSURL %>/campaign/<%= Campaign.CampaignID %>/profile"><%= __('Hi') %> {{= firstname }}!</a></div>
</script>