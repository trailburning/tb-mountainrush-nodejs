<div id="header-view">
  <div class="header-container">
    <div class="mini-menu">
      <a href="#mainmenu" role="button" data-toggle="collapse" class="nav"><div class="hamburger"><i class="fa fa-bars" aria-hidden="true"></i></div></a>
      <div class="logo-view">
        <div class="logo">

            <a href="<%= Defs.BaseHTTPSURL %>/campaign/<%= Campaign.CampaignID %>">Mogadishu Marathon</a>
        </div>
      </div>
      <div class="user-action action-signup"><a href="<%= Defs.BaseHTTPSURL %>/campaign/<%= Campaign.CampaignID %>/register" class="signup btn mr-btn btn-primary"><%= __('menu.signup') %></a></div>
      <div class="user-action action-profile"><span class="active-player-view"></span></div>
    </div>
    <div class="full-menu">
      <div class="bar"></div>
      <div class="menu-container">
        <div class="logo"><a href="<%= Defs.BaseHTTPSURL %>/campaign/<%= Campaign.CampaignID %>">Mogadishu Marathon</a></div>
        <ul class="menus">
          <li><a href="<%= Defs.BaseHTTPSURL %>/campaign/<%= Campaign.CampaignID %>/donate" class="btn mr-btn">Donate</a></li>
          <li class="user-action action-signup"><a href="<%= Defs.BaseHTTPSURL %>/campaign/<%= Campaign.CampaignID %>/register" class="signup btn mr-btn btn-primary"><%= __('menu.signup') %></a></li>
          <li class="user-action action-profile"><span class="active-player-view"></span></li>
        </ul>

        <div class="menus-simple">
          <div class="user-action action-profile">
          <span class="active-player-view"></span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="collapse" id="mainmenu" aria-expanded="false">
  <ul class="menus">
    <li><a href="<%= Defs.BaseHTTPSURL %>/campaign/<%= Campaign.CampaignID %>/donate">Donate</a></li>
  </ul>
</div>

<script type="text/template" id="activePlayerViewTemplate">
  {{ var firstname = player.firstname }}

  {{ if (!firstname) { }}
    {{ firstname = 'unknown' }}
  {{ } }}

  <div class="name">
  <a class="link" href="<%= Defs.BaseHTTPSURL %>/campaign/<%= Campaign.CampaignID %>/profile">
  <div class="avatar"><img src="/static-assets/images/avatars/avatar vector.svg"></div>
  <div class="greeting"><%= __('menu.greeting') %> {{= firstname }}!</div>
  </a></div>
</script>