<div id="footer-view">
  <div class="footer-credits-container clearfix">
    <div><a href="https://www.strava.com/mobile" target="_blank"><img src="/static-assets/images/logos/api_logo_pwrdBy_strava_stack_gray.png"></a></div>

    <% if (Campaign.CampaignFundraisingProvider == 'JustGiving') { %>
      <div class="right"><a href="https://www.justgiving.com" target="_blank"><img src="/static-assets/images/logos/JustGiving_logo_techpartner.png"></a></div>
    <% } else { %>
      <div class="right"><a href="https://www.raisenow.com" target="_blank"><img src="/static-assets/images/logos/RaiseNow_logo_techpartner.png"></a></div>
    <% } %>
  </div>
  <div class="footer-menus-container">

    <div id="language-selector-view"></div>

    <div class="footer-menus clearfix">
    <div class="logo"><a href="<%= Defs.BaseHTTPSURL %>/campaign/<%= Campaign.CampaignID %>"><div></div></a></div>
    <ul class="menus clearfix">
      <li class="legal hidden-xs">
        <div class="registered">
        WWF-UK is a registered charity in England and Wales 1081247 and in Scotland SC039593 and a company limited by guarantee registered in England and Wales 4016725
        </div>
        <div class="copyright">
        <span class="hidden-md hidden-lg">
        <% if (Defs.ImageCopyright) { %>
          <%= Defs.ImageCopyright %>;<br/>
        <% } %>
        &#169; Mountain Rush; &#169; WWF
        </span>
        <span class="visible-md visible-lg">
        <% if (Defs.ImageCopyright) { %><%= Defs.ImageCopyright %>; <% } %>&#169; Mountain Rush; &#169; WWF
        </span>
        </div>
      </li>
      <div class="right">
        <li><a href="<%= Defs.BaseHTTPSURL %>/campaign/<%= Campaign.CampaignID %>/privacy">Mountain Rush<br/><strong>Privacy Policy</strong></a></li>
        <li class="user-action action-signup"><a class="btn mr-btn btn-primary" href="<%= Defs.BaseHTTPSURL %>/campaign/<%= Campaign.CampaignID %>/register">Sign Up</a></li>
        <li class="user-action action-signout"><a href="<%= Defs.BaseHTTPSURL %>/campaign/<%= Campaign.CampaignID %>" class="signout">Sign out</a></li>
      </div>
    </ul>
    </div>  

    <div class="legal visible-xs">
      <div class="registered">
      WWF-UK is a registered charity in England and Wales 1081247 and in Scotland SC039593 and a company limited by guarantee registered in England and Wales 4016725
      </div>
      <div class="copyright">
      <% if (Defs.ImageCopyright) { %><%= Defs.ImageCopyright %><br/><% } %>      
      &#169; Mountain Rush; &#169; WWF
      </div>
    </div>  
  </div>  
</div>

<script type="text/template" id="languageSelectorViewTemplate">
  <% if (Campaign.CampaignLanguages.length > 1) { %>
    <div class="dropdown dropup mr-dropdown">
    <button id="dLabel" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><%= Campaign.SelLanguage.description %> <span class="caret"></span>
    </button>
    <ul class="dropdown-menu" aria-labelledby="dLabel">
    <% for (var i=0; i < Campaign.CampaignLanguages.length; i++) { %>
      <li><a href="#" class="change-lang" data-id="<%= Campaign.CampaignLanguages[i]['name'] %>"><%= Campaign.CampaignLanguages[i]['description'] %></a></li>
    <% } %>  
    </ul>
    </div>      
  <% } %>
</script>
